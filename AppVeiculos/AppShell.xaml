<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppVeiculos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppVeiculos"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="AppVeiculos"
    Shell.BackgroundColor="IndianRed"
    Shell.FlyoutBackgroundColor="IndianRed"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.UnselectedColor="White">

    <FlyoutItem
        FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Login"
            FlyoutIcon="user.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Cadastro"
            FlyoutIcon="user.png"
            ContentTemplate="{DataTemplate local:Cadastro}"
            Route="Cadastro"/>

        <ShellContent
            Title="Adicionar"
            FlyoutIcon="user.png"
            ContentTemplate="{DataTemplate local:Adicionar}"
            Route="Adicionar"/>

        <ShellContent
            Title="VeÃ­culos"
            FlyoutIcon="user.png"
            ContentTemplate="{DataTemplate local:Veiculos}"
            Route="Veiculos"/>

    </FlyoutItem>
</Shell>
