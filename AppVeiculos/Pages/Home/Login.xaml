<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVeiculos.Login"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="30">

            <Image
                Source="capacete.png"
                HeightRequest="100"
                WidthRequest="110"/>

            <Label
                x:Name="lblEmail"
                Text="Email"
                TextColor="White"
                FontSize="18"
                TranslationY="30"/>

            <Border
               StrokeShape="RoundRectangle 10, 10, 10, 10">
                <Entry
                    x:Name="etrEmail"
                    TextColor="White"
                    HeightRequest="50"/>
            </Border>

            <Label
                x:Name="lblSenha"
                Text="Senha"
                TextColor="White"
                FontSize="18"
                TranslationY="30"/>
            <Border
               StrokeShape="RoundRectangle 10, 10, 10, 10">
                <Entry
                    x:Name="etrSenha"
                    TextColor="White"
                    HeightRequest="50"/>
            </Border>

            <Button
                x:Name="btnLogin"
                Text="Login"
                Clicked="btnLoginOnClicked"
                BackgroundColor="Maroon"
                TextColor="White"
                TranslationY="211.5"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
