<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVeiculos.AddModelo"
             Title="AddModelo">
    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="30">

            <Image
                Source="racingcar.png"
                HeightRequest="100"
                WidthRequest="110"/>

            <Label 
                Text="Modelo"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="White"/>

            <Label
                x:Name="lblModelo"
                Text="Modelo"
                TextColor="White"/>
            <Entry
                x:Name="etrModelo"
                TextColor="White"/>

            <Label
                x:Name="lblOBSModelo"
                Text="Observações"
                TextColor="White"/>
            <Editor
                x:Name="edtOBSModelo"
                TextColor="White"/>

            <Button
                x:Name="btnAddModelo"
                Text="Adicionar"
                TextColor="White"
                BackgroundColor="Maroon"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>