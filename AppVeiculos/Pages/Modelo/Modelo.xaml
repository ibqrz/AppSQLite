<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVeiculos.Modelo"
             Title="Modelo">
    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="30">

            <Border
            StrokeShape="RoundRectangle 10, 10, 10, 10">

                <SearchBar
                    FlowDirection="LeftToRight"
                    Placeholder="Pesquisar"
                    PlaceholderColor="White"/>

            </Border>

            <Button
                x:Name="btnAddModelo"
                Text="+"
                FontSize="20"
                TextColor="White"
                BackgroundColor="Maroon"
                Clicked="btnAddModeloOnClicked"/>

            <ListView x:Name="listModelo" ItemSelected="listModeloItemSelect">
                <ListView.Header>
                    <Grid ColumnDefinitions="*, *">
                        <Label Grid.Column="0" Text="Id: "/>
                        <Label Grid.Column="1" Text="Modelo: "/>
                    </Grid>
                    <Frame
                        HeightRequest="150"
                        CornerRadius="10"
                        BorderColor="Transparent"
                        BackgroundColor="DimGray">
                        <StackLayout Spacing="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Image
                                    Source="registcert.png"
                                    HeightRequest="100"
                                    WidthRequest="100"
                                    HorizontalOptions="Start"
                                    Grid.Row="0"
                                    Grid.Column="0"/>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <ViewCell.ContextActions>
                                                <Image
                                                    x:Name="imgEdit"
                                                    Source="edit.png"
                                                    HeightRequest="30"
                                                    WidthRequest="30"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Center"
                                                    View.Margin="0, -50, 0, 0"
                                                    Grid.Row="0"
                                                    Grid.Column="1">

                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="imgEditOnClicked"/>
                                                    </Image.GestureRecognizers>
                                                </Image>

                                                <Image
                                                    x:Name="imgDelete"
                                                    Source="cancel.png"
                                                    HeightRequest="25"
                                                    WidthRequest="30"
                                                    HorizontalOptions="End"
                                                    Margin="0, 70, 0, 0"
                                                    Grid.Row="0"
                                                    Grid.Column="1">

                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="imgDeleteOnClicked"/>
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </ViewCell.ContextActions>
                                            <Grid ColumnDefinitions="*, *">
                                                <Label Grid.Column="0" Text="{Binding modId}"/>
                                                <Label Grid.Column="1" Text="{Binding modNome}"/>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </Grid>
                        </StackLayout>
                    </Frame>
                </ListView.Header>
            </ListView>
            <Frame
                HeightRequest="150"
                CornerRadius="10"
                BorderColor="Transparent"
                BackgroundColor="DimGray">
                <StackLayout
                    Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image
                            Source="registcert.png"
                            HeightRequest="100"
                            WidthRequest="100"
                            HorizontalOptions="Start"
                            Grid.Row="0"
                            Grid.Column="0"/>

                        <Image
                            x:Name="imgEdit"
                            Source="edit.png"
                            HeightRequest="30"
                            WidthRequest="30"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            View.Margin="0, -50, 0, 0"
                            Grid.Row="0"
                            Grid.Column="1">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="imgEditOnClicked"/>
                            </Image.GestureRecognizers>
                        </Image>

                        <Image
                            x:Name="imgDelete"
                            Source="cancel.png"
                            HeightRequest="25"
                            WidthRequest="30"
                            HorizontalOptions="End"
                            Margin="0, 70, 0, 0"
                            Grid.Row="0"
                            Grid.Column="1">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="imgDeleteOnClicked"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>