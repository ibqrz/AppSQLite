<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVeiculos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="30">

            <Image
                Source="racingcar.png"
                HeightRequest="60"
                WidthRequest="60"/>

            <Label
                x:Name="lblLogin"
                Text="Veiculos"
                HorizontalTextAlignment="Center"
                TextColor="White"/>

            <Button
                x:Name="btnLogin"
                Text="Login"
                Clicked="btnLoginOnClicked"
                BackgroundColor="Maroon"
                TextColor="White"/>

            <Button
                x:Name="btnCadastrar"
                Text="Cadastrar-se"
                Clicked="btnCadastrarOnClicked"
                BackgroundColor="Maroon"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
