<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVeiculos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="30">

            <Image
                Source="vermelho.png"
                HeightRequest="200"
                WidthRequest="300"
                TranslationY="40"/>
            <Image
                Source="driveon.png"
                HeightRequest="100"
                WidthRequest="300"
                HorizontalOptions="Center"/>

            <Button
                x:Name="btnLogin"
                Text="Login"
                Clicked="btnLoginOnClicked"
                BackgroundColor="Maroon"
                TextColor="White"
                TranslationY="100"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
